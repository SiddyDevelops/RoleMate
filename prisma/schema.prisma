generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String?

  // Many-to-Many relation between USER & TYPE
  types TypeUser[] 
  // Many-to-Many relation between USER & ACCESSTO
  accessTos UserAccess[] 
}

model Type {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String
  description String?

  // Many-to-Many relation between USER & TYPE
  users TypeUser[]
}

model AccessTo {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String
  description String?

  // Many-to-Many relation between USER & ACCESSTO
  users UserAccess[] 
}

model TypeUser {
  userId String
  typeId String
  user User @relation(fields: [userId], references: [id])
  type Type @relation(fields: [typeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([userId, typeId])
}

model UserAccess {
  userId    String
  accessId  String
  user User @relation(fields: [userId], references: [id])
  access AccessTo @relation(fields: [accessId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([userId, accessId])
}