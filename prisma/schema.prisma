generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String?

  // Many-to-Many relation between USER & ROLE
  roles RoleUser[] 
  // Many-to-Many relation between USER & ACCESSTO
  accessTos UserAccess[] 
}

model Role {
  id String @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String
  description String?

  // Many-to-Many relation between USER & ROLE
  users RoleUser[]
}

model AccessTo {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String
  description String?

  // Many-to-Many relation between USER & ACCESSTO
  users UserAccess[] 
}

model RoleUser {
  userId String
  roleId String
  user User @relation(fields: [userId], references: [id])
  role Role @relation(fields: [roleId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([userId, roleId])
}

model UserAccess {
  userId    String
  accessId  String
  user User @relation(fields: [userId], references: [id])
  access AccessTo @relation(fields: [accessId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([userId, accessId])
}